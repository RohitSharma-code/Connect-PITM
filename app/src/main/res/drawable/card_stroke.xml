<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer Stroke Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#669bbc" /> <!-- Border color -->
            <corners android:radius="15dp" /> <!-- Match card corner radius -->
        </shape>
    </item>

    <!-- Inner Card Background -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Background color of the card -->
            <corners android:radius="14dp" /> <!-- Slightly smaller corner radius -->
        </shape>
    </item>
</layer-list>
